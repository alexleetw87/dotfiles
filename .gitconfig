[user]
    name = Bo-Yi Wu
    email = appleboy.tw@gmail.com
[color]
    ui = true
    diff = auto
    status = auto
    branch = auto
    log = auto
    ui = auto
[alias]
    gl = log -16 --color=always --all --graph --topo-order --pretty='format: %Cgreen%h%Creset %s%Cred%d%Creset%n'
    gs = log --pretty=format:"%h %ad | %s%d [%an]" --graph --date=short

    merge = merge --no-ff
    up = merge --ff-only

    co = checkout
    ci = commit -s

    st = status
    stat = status

    br = branch -v

    fo = fetch origin
    fu = fetch upstream
    po = push origin
    pu = pull --rebase origin master

    unstage = reset HEAD
    uncommit = reset --soft HEAD^
    amend = commit --amend
    who = shortlog -n -s --no-merges
    g = grep -n --color -E
    cp = cherry-pick -x

    # Handy shortcuts for rebasing
    rc = rebase --continue
    rs = rebase --skip
    ra = rebase --abort
[core]
    editor = vi
